<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="MAUI.Cours.Net.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MAUI.Cours.NET.Pages"
       xmlns:vm="clr-namespace:MAUI.Cours.NET.Models"
       xmlns:service="clr-namespace:MAUI.Cours.NET.Services"
       Shell.FlyoutBehavior="Flyout"
       Shell.NavBarIsVisible="false"
       Title="Gauniv.Client"
       BindingContext="{vm:MenuViewModel}"
       x:DataType="vm:MenuViewModel">

    <!--<MenuItem Text="Help"
              IconImageSource="help.png"
              Command="{Binding GoToProfileCommand}"/>-->
    <FlyoutItem Title="Games"
                Route="games">
        <ShellContent ContentTemplate="{DataTemplate local:Page1}" />
    </FlyoutItem>

    <FlyoutItem Title="Profile"
                Route="profile">
        <ShellContent ContentTemplate="{DataTemplate local:Page2}" />
    </FlyoutItem>
</Shell>
